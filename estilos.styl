@import "iconos.styl"

a
	color  white
a:hover
	color  #0C92DA

*
	margin  0
	padding  0

body
	background-image url("img/fondo_body.jpg")
	font-family 'Raleway', sans-serif

header
	background-image linear-gradient(bottom,#698c00,#85b200,#698c00)
	background-image -o-linear-gradient(bottom,#698c00,#85b200,#698c00)
	background-image -ms-linear-gradient(bottom,#698c00,#85b200,#698c00)
	background-image -moz-linear-gradient(bottom,#698c00,#85b200,#698c00)
	background-image -webkit-linear-gradient(bottom,#698c00,#85b200,#698c00)
	background-color #7EA800
	border-bottom 4px solid #8fbf00
	box-shadow 0 1px 2px #687065
	color #fff
	margin 0
	padding 0
	position fixed
	z-index 3
	width 100%

	img
		width 100%

	h1
		font-family  'Lobster', cursive
		font-size  1.8em
		margin  0.74em 0.62em
		position  absolute
		text-rendering  optimizeLegibility
		text-shadow  3px 2px 2px #0c0c0c
		z-index  1

	#fondo_titulo
		background-image linear-gradient(bottom,#111,#373737,#111)
		background-image -o-linear-gradient(bottom,#111,#373737,#111)
		background-image -ms-linear-gradient(bottom,#111,#373737,#111)
		background-image -moz-linear-gradient(bottom,#111,#373737,#111)
		background-image -webkit-linear-gradient(bottom,#111,#373737,#111)
		background-color  #1F1F1F

		box-shadow  0.5px -2.8px 5px #394923
		-webkit-box-shadow  .5px -2.8px 5px #394923
		margin  0 0 0 -1.2em
		transform  skewX(-28deg)
		-o-transform  skewX(-28deg)
		-ms-transform  skewX(-28deg)
		-moz-transform  skewX(-28deg)
		-webkit-transform  skewX(-28deg)
		height  70px
		width  54%

	nav
		display  inline-block
		vertical-align  top
		margin  1.1em 0.1em 0
		width  5.2em

		a
			color  #fff
			display  inline-block
			font-size  .9em
			padding  0 .4em
			text-decoration  none
			text-shadow  1px 1px 3px #485a25
		a:hover
			color  #273201
			text-decoration  underline
			text-shadow  none

		.home
			margin-left  0.72em

	figure, #fondo_titulo
		display  inline-block
		vertical-align  top

	figure
		cursor  pointer
		margin  0.3em 0
		position  absolute
		right  1em
		height  56px
		width  56px

	.imagen
		border  2px solid #eee
		border-radius  50px
		-webkit-border-radius  50px
		transition  all .5s ease
		-o-transition  all .5s ease
		-ms-transition  all .5s ease
		-moz-transition  all .5s ease
		-webkit-transition  all .5s ease

	#logo:hover, .imagen:hover
		transform  scale(1.1) rotate(360deg)
		-o-transform  scale(1.1) rotate(360deg)
		-ms-transform  scale(1.1) rotate(360deg)
		-moz-transform  scale(1.1) rotate(360deg)
		-webkit-transform  scale(1.1) rotate(360deg)

#content
	padding-top 5em
	padding-bottom 0.5em
	column-count 1
	-moz-column-count 1
	-webkit-column-count 1
	width 100%

	.item
		display inline-block
		vertical-align top
		margin 0.26em 0
		position relative
		text-align center
		width 100%

		figure
			border-bottom 3px solid #10A4DC
			line-height 0

		img
			width 100%

		a
			text-decoration none

		.titulo, .autor
		 	background rgba(0,0,0,0.6)
		 	opacity .3
		 	filter alpha(opacity=30)
		 	-ms-filter "progid:DXImageTransform.Microsoft.Alpha(Opacity=30)"

			position absolute
			transition .4s
			-o-transition .4s
			-ms-transition .4s
			-moz-transition .4s
			-webkit-transition .4s
		.item:hover .titulo, .item:hover .autor
			opacity 1
			-ms-filter none
			filter none		
	 
		.autor
			border-radius 0 0 5px 5px
			-webkit-border-radius 0 0 5px 5px
			font-size 0.8em
			left 15%
			padding 0.4em 0.8em 0.2em
			top 0

			width 65%
			.por 
				color #eee
			.nombre 
				color #10A4DC
			.nombre:hover 
				color #80A314
	 
		.autor, .por, .nombre 
			display inline-block


		.titulo
			bottom 0.21em
			font-size 0.9em
			padding 0.35em 0

			width 100%
	 
			h3
				margin 0
				a 
					color #ccc
				a:hover 
					color #eee

			.votos
				color #ddd
				font-size 1.1em
				margin 0
				text-shadow 0 1px 1px #23231B
	 
				.icon-angle-circled-up, .icon-angle-circled-down
					color #aaa
					padding 0 0.2em
				 
				.icon-angle-circled-up:hover
					color #72940C
				 
				.icon-angle-circled-down:hover
					color #C0250A
 


footer
	background-image linear-gradient(top,#242424,#0a0a0a)
	background-image -o-linear-gradient(top,#242424,#0a0a0a)
	background-image -ms-linear-gradient(top,#242424,#0a0a0a)
	background-image -moz-linear-gradient(top,#242424,#0a0a0a)
	background-image -webkit-linear-gradient(top,#242424,#0a0a0a)
	background-color  #121212
	color  #e9e9e9
	font-size  .8em
	padding  1.5em 0
	text-align  center
	p
		display  block

	#copyright
		display  inline-block
		width  80%
		a
			color  #d4d4d4
			display  inline-block
			font-size  1.7em
			margin-left  0.5em
			text-decoration  none

		.icon-facebook-circled
			content  '\e802'

		.icon-twitter-circled
			content  '\e803'

		.icon-gplus-circled
			content  '\e804'

		.icon-facebook-circled:hover
			color  #025c9f

		.icon-twitter-circled:hover
			color  #52C5FC

		.icon-gplus-circled:hover
			color  #f5380a


@import "responsive.styl"